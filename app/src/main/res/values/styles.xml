<resources>

    <bool name="phone_device">true</bool>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--COLORS-->
        <item name="colorPrimary">@color/custom_blue</item>
        <item name="colorPrimaryDark">@color/custom_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/custom_pink</item>
        <item name="colorOnSurface">@color/custom_blue_light</item>
        <item name="fontFamily">@font/roboto_regular</item>

        <item name="textAppearanceHeadline1">
            @style/TextAppearance.RealEstateManagerStyles.Headline1
        </item>
        <item name="textAppearanceHeadline2">
            @style/TextAppearance.RealEstateManagerStyles.Headline2
        </item>
        <item name="textAppearanceSubtitle1">
            @style/TextAppearance.RealEstateManagerStyles.Subtitle1
        </item>
        <item name="textAppearanceBody1">
            @style/TextAppearance.RealEstateManagerStyles.Body1
        </item>

        <!--COMPONENT-->
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="bottomNavigationStyle">@style/AppBottomNavigation</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert
        </item>
    </style>

    <!--BASE STYLES-->

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/button_corner</item>
    </style>

    <style name="AppBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored" />

    <style name="CheckedTextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:paddingTop">7dp</item>
    </style>

    <style name="fragmentWithNavStyle">
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
        <item name="android:layout_marginBottom">?attr/actionBarSize</item>
    </style>

    <style name="MediaControllerCheckedTextView" parent="CheckedTextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TopAppBarIconImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">@dimen/basic_marge</item>
        <item name="android:paddingEnd">@dimen/basic_marge</item>
    </style>

    <style name="basicSeparatorStyle">
        <item name="android:layout_marginStart">@dimen/big_marge</item>
        <item name="android:layout_marginEnd">@dimen/big_marge</item>
        <item name="android:background">@color/custom_blue</item>
        <item name="android:layout_marginTop">@dimen/basic_marge</item>
    </style>

    <style name="custom_alert_dialog_set_title_edit_text">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>


</resources>
