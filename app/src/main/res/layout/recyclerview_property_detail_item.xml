<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/property_detail_item_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="@dimen/little_marge"
        android:contentDescription="@string/property_detail_item_photo"
        android:scaleType="centerCrop"
        android:layout_marginStart="@dimen/little_marge"
        android:src="@drawable/img_contemporary_styled_house"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/property_detail_item_photo_description"
        style="@style/Widget.listRecyclerviewPhotoDescriptionTextView"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/property_detail_item_photo"
        app:layout_constraintEnd_toEndOf="@id/property_detail_item_photo"
        app:layout_constraintStart_toStartOf="@id/property_detail_item_photo" />

</androidx.constraintlayout.widget.ConstraintLayout>