<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_shape"
    android:padding="@dimen/big_marge">


    <VideoView
        android:id="@+id/set_photo_title_video_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/set_photo_title_image_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="150dp"
        android:background="@color/custom_pink_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/set_photo_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textAppearance="@style/TextAppearance.RealEstateManagerStyles.Subtitle1"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/set_photo_accept_button"
        app:layout_constraintStart_toStartOf="@id/set_photo_title_image_view" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/set_photo_accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:textAppearance="@style/TextAppearance.RealEstateManagerStyles.Subtitle1"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@id/set_photo_title_image_view"
        app:layout_constraintStart_toEndOf="@id/set_photo_cancel_button"
        app:layout_constraintTop_toTopOf="@id/set_photo_cancel_button" />

    <EditText
        android:id="@+id/set_photo_description_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.6"
        android:background="@color/black"
        android:hint="Description"
        android:paddingTop="@dimen/big_marge"
        android:paddingBottom="@dimen/big_marge"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.RealEstateManagerStyles.Subtitle1"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/set_photo_cancel_button"
        app:layout_constraintEnd_toEndOf="@id/set_photo_title_image_view"
        app:layout_constraintStart_toStartOf="@id/set_photo_title_image_view" />


</androidx.constraintlayout.widget.ConstraintLayout>