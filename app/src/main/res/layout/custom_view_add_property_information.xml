<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/add_property_information_custom_view_icon"
        style="@style/customViewInformationIconStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/add_property_information_custom_view_title" />

    <TextView
        android:id="@+id/add_property_information_custom_view_title"
        style="@style/Widget.Subtitle1TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/add_property_information_custom_view_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_property_information_custom_view_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="0"
        android:background="@color/white"
        android:hint="@string/value"
        android:inputType="numberDecimal"
        android:textAppearance="@style/TextAppearance.RealEstateManagerStyles.Body1"
        app:layout_constraintStart_toEndOf="@id/add_property_information_custom_view_icon"
        app:layout_constraintTop_toBottomOf="@id/add_property_information_custom_view_title" />

</androidx.constraintlayout.widget.ConstraintLayout>