<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/add_property_information_custom_view_icon"
        style="@style/customViewInformationIconStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/area_icon"
        app:layout_constraintBottom_toBottomOf="@id/add_property_information_custom_view_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/add_property_information_custom_view_title" />


    <TextView
        android:id="@+id/add_property_information_custom_view_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/surface"
        android:textAppearance="@style/TextAppearance.RealEstateManagerStyles.Subtitle1"
        app:layout_constraintStart_toEndOf="@id/add_property_information_custom_view_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_property_information_custom_view_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/value"
        android:autofillHints="0"
        app:layout_constraintStart_toEndOf="@id/add_property_information_custom_view_icon"
        app:layout_constraintTop_toBottomOf="@id/add_property_information_custom_view_title"
        android:inputType="numberDecimal" />

</androidx.constraintlayout.widget.ConstraintLayout>