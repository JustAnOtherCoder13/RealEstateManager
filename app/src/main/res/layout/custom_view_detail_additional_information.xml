<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/additional_information_custom_view_area_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/basic_marge"
        android:paddingStart="0dp"
        app:layout_constraintTop_toTopOf="@id/additional_information_custom_view_area_title"
        app:layout_constraintBottom_toBottomOf="@id/additional_information_custom_view_area_value"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_fragment_detail_area_24"
        android:contentDescription="@string/area_icon" />

    <TextView
        android:id="@+id/additional_information_custom_view_area_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/additional_information_custom_view_area_icon"
        android:text="@string/surface"
        android:textAppearance="@style/TextAppearance.RealEstateManagerStyles.Subtitle1"
        />
    <TextView
        android:id="@+id/additional_information_custom_view_area_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/additional_information_custom_view_area_title"
        app:layout_constraintStart_toEndOf="@id/additional_information_custom_view_area_icon"
        android:text="@string/_750_sq_m"
        />

</androidx.constraintlayout.widget.ConstraintLayout>