<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/detail_information_custom_view_icon"
        style="@style/customViewInformationIconStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/detail_information_custom_view_title" />

    <TextView
        android:id="@+id/detail_information_custom_view_title"
        style="@style/Widget.TextViewSubTitleStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/detail_information_custom_view_icon"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/detail_information_custom_view_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/detail_information_custom_view_icon"
        app:layout_constraintTop_toBottomOf="@id/detail_information_custom_view_title"
        tool:text="@tools:sample/lorem" />

</androidx.constraintlayout.widget.ConstraintLayout>