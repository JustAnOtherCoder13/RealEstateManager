<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mapsFragment">

    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.openclassrooms.realestatemanager.presentation.ui.fragment.MapsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_maps" >
        <action
            android:id="@+id/action_mapsFragment_to_addPropertyFragment"
            app:destination="@id/addPropertyFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popExitAnim="@anim/fragment_close_exit"
            />
        <action
            android:id="@+id/action_mapsFragment_to_propertyDetailFragment"
            app:destination="@id/propertyDetailFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popExitAnim="@anim/fragment_close_exit"
            />
    </fragment>
    <fragment
        android:id="@+id/propertyDetailFragment"
        android:name="com.openclassrooms.realestatemanager.presentation.ui.fragment.PropertyDetailFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_property_detail" >
        <action
            android:id="@+id/action_propertyDetailFragment_to_addPropertyFragment"
            app:destination="@id/addPropertyFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popExitAnim="@anim/fragment_close_exit"
            />
        <action
            android:id="@+id/action_addPropertyFragment_to_propertyDetailFragment"
            app:destination="@id/propertyDetailFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popExitAnim="@anim/fragment_close_exit"
            />
    </fragment>

    <fragment
        android:id="@+id/addPropertyFragment"
        android:name="com.openclassrooms.realestatemanager.presentation.ui.fragment.AddPropertyFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_add_property" >
        <action
            android:id="@+id/action_addPropertyFragment_to_propertyListFragment"
            app:destination="@id/propertyListFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popExitAnim="@anim/fragment_close_exit"
            />
    </fragment>
    <fragment
        android:id="@+id/propertyListFragment"
        android:name="com.openclassrooms.realestatemanager.presentation.ui.fragment.PropertyListFragment"
        android:label="fragment_property_list"
        tools:layout="@layout/fragment_property_list" >
        <action
            android:id="@+id/action_propertyListFragment_to_propertyDetailFragment"
            app:destination="@id/propertyDetailFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popExitAnim="@anim/fragment_close_exit" />
        <action
            android:id="@+id/action_propertyListFragment_to_addPropertyFragment"
            app:destination="@id/addPropertyFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popExitAnim="@anim/fragment_close_exit"
            />
    </fragment>


</navigation>